import pandas as pd
import random
from datetime import datetime, timedelta

# Zeitraum für 2025 definieren
start_date = datetime(2025, 1, 8)
end_date = datetime(2025, 1, 29)

# Teammitglieder definieren
team_members = ["Annika Pernes", "Lili Lubkowitz", "Johanna Blessinger", "Isabell Bialucha"]

# Wochentage für die Verteilung der Stunden (Montag bis Freitag)
weekdays = [0, 1, 2, 3, 4]  # Montag (0) bis Freitag (4)

# Erfasste Stunden mit zufälliger Verteilung auf Wochentage, oft gemeinsam in Meetings
data = []
for week_start in pd.date_range(start=start_date, end=end_date, freq='W-SUN'):
    meeting_day = week_start + timedelta(days=random.choice(weekdays))  # Gemeinsamer Meeting-Tag
    for member in team_members:
        if random.random() < 0.7:  # 70% Wahrscheinlichkeit für gemeinsames Meeting
            data.append({"Datum": meeting_day.strftime("%Y-%m-%d"), "Teammitglied": member, "Projekt": "BSW Netzwerkanalyse", "Stunden": 2})
        else:
            # Falls kein gemeinsames Meeting, zufällig verteilen
            individual_day = week_start + timedelta(days=random.choice(weekdays))
            data.append({"Datum": individual_day.strftime("%Y-%m-%d"), "Teammitglied": member, "Projekt": "BSW Netzwerkanalyse", "Stunden": 2})

# DataFrame erstellen
zeiterfassung_df = pd.DataFrame(data)
zeiterfassung_df = zeiterfassung_df.sort_values(by=["Datum", "Teammitglied"]).reset_index(drop=True)

# DataFrame als CSV speichern
zeiterfassung_df.to_csv("zeiterfassung_2025.csv", index=False)

print("Zeiterfassung wurde erfolgreich gespeichert als 'zeiterfassung_2025.csv'.")
